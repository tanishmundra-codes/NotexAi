generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The User
model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String
  lectures  Lecture[] 
  createdAt DateTime  @default(now())
}

// The Lecture (Video or PDF)
model Lecture {
  id          String   @id @default(uuid())
  title       String 
  
  // Input Sources
  videoUrl    String?  
  pdfUrl      String?
  
  // The content extracted
  transcript  String?  @db.Text 

  // The AI Results (Stored as JSON)
  summary     Json?    
  quiz        Json?  
  
  // Status
  status      String   @default("QUEUED") // QUEUED, PROCESSING, COMPLETED, FAILED

  // Relationship
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}